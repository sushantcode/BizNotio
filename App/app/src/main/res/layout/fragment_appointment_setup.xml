<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Fragments.AppointmentSetupFragment" android:id="@+id/appointment_details">

    <TextView
            android:text="Setup Appointment:"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/title_appointSetup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.002"
            android:textSize="18sp" android:textStyle="bold"
            android:background="@color/colorPrimary" android:textAlignment="viewStart"
            android:textColor="@android:color/black" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/appointment_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.074" android:hint="Give a topic...."/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:hint="Give detail...."
            android:ems="10"
            android:id="@+id/appointment_detail"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/appointment_title"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintVertical_bias="0.033"/>
    <Button
            android:text="PICK DATE"
            android:layout_width="136dp"
            android:layout_height="48dp" android:id="@+id/pickDateBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/appointment_title"
            app:layout_constraintHorizontal_bias="0.026" app:layout_constraintVertical_bias="0.327"/>

    <TextView
            android:text="Date"
            android:layout_width="167dp"
            android:layout_height="35dp" android:id="@+id/dateTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.364"
            android:textSize="18sp" android:textStyle="bold"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toEndOf="@+id/pickDateBtn"/>
    <Button
            android:text="PICK TIME"
            android:layout_width="136dp"
            android:layout_height="48dp" android:id="@+id/pickTimeBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/appointment_title"
            app:layout_constraintHorizontal_bias="0.026" app:layout_constraintVertical_bias="0.532"/>
    <TextView
            android:text="Time"
            android:layout_width="167dp"
            android:layout_height="35dp" android:id="@+id/timeTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.547"
            android:textSize="18sp" android:textStyle="bold"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toEndOf="@+id/pickTimeBtn"/>
    <Button
            android:text="Request Appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/requestAppointment"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appointment_title" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.499" app:layout_constraintVertical_bias="0.764"/>


</androidx.constraintlayout.widget.ConstraintLayout>