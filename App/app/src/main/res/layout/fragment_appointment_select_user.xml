<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Fragments.AppointmentSelectUserFragment">

    <TextView
            android:text="Select Participant:"
            android:layout_width="match_parent"
            android:layout_height="30dp" android:id="@+id/title_selectUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp" android:textStyle="bold"
            android:background="@color/colorPrimary" android:textAlignment="viewStart"
            android:textColor="@android:color/black"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_selectUser"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="407dp"
            android:layout_height="697dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/title_selectUser" app:layout_constraintVertical_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>