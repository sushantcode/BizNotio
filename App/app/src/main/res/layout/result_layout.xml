<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardElevation="0dp"
                                   app:cardCornerRadius="2dp"
                                   app:cardPreventCornerOverlap="false"
                                   app:cardUseCompatPadding="true"

                                   android:layout_marginBottom="40dp"
                                   android:clickable="true"
                                   android:foreground="?android:attr/selectableItemBackground"
                                   android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_list_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:paddingHorizontal="36dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/search_list_element_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/profile"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/search_list_element_user_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/search_list_element_account_type"
                android:layout_width="239dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="2dp"
                android:alpha="0.5"
                android:fontFamily="@font/space_mono"
                android:gravity="start|top"
                android:text="@string/must_go_tal"
                android:textAppearance="@style/must_go_tal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/search_list_element_user_name"
                android:layout_width="102dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="55dp"
                android:alpha="0.7"
                android:fontFamily="@font/space_mono"
                android:gravity="bottom"
                android:text="@string/julia_semid"
                android:textAppearance="@style/julia_semid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

